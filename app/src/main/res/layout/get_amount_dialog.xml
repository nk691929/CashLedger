<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >

        <EditText
            android:id="@+id/get_amount_tv"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layout_corner"
            android:hint="Amount"
            android:textColor="@color/cash_ledger_primary_color"
            android:backgroundTint="@color/white"
            android:inputType="number"/>

        <EditText
            android:id="@+id/get_amount_details"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_amount_tv"
            android:hint="Details (Optional)"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_corner"
            android:backgroundTint="@color/white"
            android:padding="10dp"/>

        <LinearLayout
            android:id="@+id/add_image_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/get_amount_details"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/layout_corner"
            android:backgroundTint="@color/white">
            <ImageView
                android:id="@+id/bill_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bill_img"/>
            <TextView
                android:id="@+id/bill_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Bill"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/cash_ledger_primary_color"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_amount_btn"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/cash_ledger_primary_color"
            android:background="@drawable/black_button_res"
            android:textColor="@color/blueWhite"
            android:textSize="15sp"
            android:layout_below="@+id/add_image_bill"
            android:text="Add"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"/>

    </RelativeLayout>

</RelativeLayout>