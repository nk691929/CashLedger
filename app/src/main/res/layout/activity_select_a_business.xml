<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.SelectionActivity">
    <TextView
        android:id="@+id/title_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Select Business"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/search_res"
        android:padding="10dp"
        android:backgroundTint="@color/cash_ledger_primary_color"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title_activity"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/move_book"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Move"
        android:backgroundTint="@color/cash_ledger_primary_color"
        android:background="@drawable/black_button_res"
        android:textColor="@color/blueWhite"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>