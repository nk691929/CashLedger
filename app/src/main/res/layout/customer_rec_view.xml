<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/customer_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/customerIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_layout_res"
            android:contentDescription="customer logo"
            android:gravity="center"
            android:text="N"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/nameCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/customerIcon"
            android:text="name will be here"
            android:textColor="#384B54"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="phone"
            android:textColor="#384B54"
            android:layout_toStartOf="@id/customer_more"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/customer_more"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/more_ver_blue"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>