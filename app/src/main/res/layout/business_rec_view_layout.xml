<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:id="@+id/business_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/business_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/baseline_business_24"
            android:background="@drawable/brown_corner"/>

        <TextView
            android:id="@+id/business_name"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="Education"
            android:gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:textStyle="bold"
            android:textColor="@color/cash_ledger_primary_color"/>

        <TextView
            android:id="@+id/business_book_num"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Books : 4"
            android:gravity="end"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</RelativeLayout>