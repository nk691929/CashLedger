<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <LinearLayout
        android:id="@+id/cancel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/cancel_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_cancel_24"/>

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Select Business"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <View
        android:id="@+id/upperView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/cancel_layout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#B8B6B6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/business_rec_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upperView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <View
        android:id="@+id/lowerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/business_rec_view"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#B8B6B6" />

    <LinearLayout
        android:id="@+id/add_new_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/diye_res"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lowerView"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/business_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/business_icon"/>

        <TextView
            android:id="@+id/add_new_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add New Bussiness"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>